<Window xmlns:Custom="clr-namespace:PlaylistManager.WPF.Custom"  x:Class="PlaylistManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlaylistManager.WPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        MinHeight="400" 
        MinWidth="525"
        Background="#262626">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Close"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid>
            <Custom:AudioPlayerControl HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="auto" Height="100"  Background="#3d3d3d"/>
        </Grid>
    </DockPanel>
</Window>
